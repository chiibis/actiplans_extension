{
    "manifest_version": 2,

    "name": "ActiPlans extension",
    "description": "Summary view for actiPlans",
    "version": "0.4",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://adtt.actiplans.com/*"],
            "css": ["css/style.css"],
            "js": ["third_party/jquery-2.1.0.min.js"],
            "run_at" :"document_start"
        },
        {
            "matches": ["*://adtt.actiplans.com/*/user/my_schedule.do*"],
            "js": ["content/table_view.js"],
            "run_at" : "document_start"
        }
    ],
    "icons": {
        "128": "icon_128.png",
        "16": "images/icon_48.png"
    },

    "permissions": ["tabs","storage"],
    "browser_action": {
        "default_icon": "images/icon_19.png",
        "default_title": "Go to ActiPlans"
    }
}